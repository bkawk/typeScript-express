{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "routes/types/*"
            ]
        }
    },
    "include": [
        "routes/**/*", "routes/server.ts"
    ]
}